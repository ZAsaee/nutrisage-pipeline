{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 4,
    "reload": false
  },
  "api": {
    "title": "NutriSage API",
    "description": "ML-powered nutrition grade prediction service",
    "version": "1.0.0",
    "docs_url": "/docs",
    "redoc_url": "/redoc"
  },
  "model": {
    "model_path": "models/nutrition_grade_model.pkl",
    "metadata_path": "models/model_metadata.pkl",
    "load_on_startup": true
  },
  "cors": {
    "origins": ["*"],
    "methods": ["GET", "POST"],
    "headers": ["*"]
  },
  "rate_limiting": {
    "enabled": false,
    "requests_per_minute": 100
  },
  "logging": {
    "level": "INFO",
    "format": "json"
  },
  "health_check": {
    "enabled": true,
    "name": "health",
    "description": "API health check",
    "path": "/api/health",
    "method": "GET",
    "public": true,
    "interval": 30
  }
} 