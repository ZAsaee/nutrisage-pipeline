{
  "model_type": "xgboost",
  "hyperparameters": {
    "objective": "multi:softprob",
    "max_depth": 6,
    "learning_rate": 0.1,
    "n_estimators": 100,
    "subsample": 0.8,
    "colsample_bytree": 0.8,
    "random_state": 42,
    "eval_metric": "mlogloss"
  },
  "training": {
    "test_size": 0.2,
    "random_state": 42,
    "cv_folds": 5,
    "early_stopping_rounds": 10
  },
  "hyperparameter_tuning": {
    "method": "grid_search",
    "param_grid": {
      "max_depth": [3, 4, 5, 6, 7],
      "learning_rate": [0.01, 0.05, 0.1, 0.15],
      "n_estimators": [50, 100, 150],
      "subsample": [0.7, 0.8, 0.9],
      "colsample_bytree": [0.7, 0.8, 0.9]
    },
    "cv_folds": 5,
    "n_trials": 20
  },
  "feature_columns": [
    "energy-kcal_100g",
    "fat_100g",
    "carbohydrates_100g",
    "sugars_100g",
    "proteins_100g",
    "sodium_100g",
    "fat_carb_ratio",
    "protein_carb_ratio",
    "protein_fat_ratio",
    "total_macros"
  ],
  "target_column": "nutrition_grade_fr",
  "label_mapping": {
    "a": 0,
    "b": 1,
    "c": 2,
    "d": 3,
    "e": 4
  }
} 